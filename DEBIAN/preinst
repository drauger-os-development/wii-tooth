#!/bin/bash
if $(ls /etc/udev/rules.d | grep -p '70-wii-tooth.rules'); then
	echo "udev rules already established. Continuing . . ."
else
	echo 'KERNEL=="uinput", GROUP="users"' >> /etc/udev/rules.d/70-wii-tooth.rules
	echo "udev rules established."
fi
if $(cat /etc/modules | grep -q "uinput"); then
	exit
else
	echo "uinput" >> /etc/modules
fi
