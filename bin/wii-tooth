VERSION="0.0.1"
help="
Wii-Tooth, Version $VERSION

Configures wminput for use and provides better configuration options.
Has it's own daemon implementation of wminput.

-d, --daemon	Run as daemon
-h, --help	Print this Help Message and exit
-v, --version	Print Version and Exit
"
if [ "$1" == "-d" ] || [ "$1" == "--daemon" ]; then
	/bin/wii-tooth &
	/bin/echo -e "\nwii-tooth is now running. Run \"kill $!\" or \"killall wiitooth\" to kill it.\n"
	exit 0
elif [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
	/echo/echo "$help"
	exit 0
elif [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
	/echo/echo -e "\nVersion: $VERSION\n"
	exit 0
fi
x="1"
while [ "$x" == "1" ]; do
	/usr/bin/wminput -r -q -c /home/batcastle/Dropbox/GitHub/wii-tooth/etc/cwiid/wminput/wii-tooth-default.conf 2>check >/dev/null &
	/bin/sleep 6s
	if [ "$(/bin/echo $check | /bin/grep -q 'No wiimotes found')" == "1" ] && [ "$(/bin/echo $check | /bin/grep -q 'unable to connect')" == "1" ]; then
		/usr/bin/notify-send "Wiimote Connected!"
	else
		continue
	fi
done
		
